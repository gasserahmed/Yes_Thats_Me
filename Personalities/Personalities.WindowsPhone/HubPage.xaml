            </HubSection>
            <HubSection Width="390" Header="Types" Background="#FFF" >
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.01*"/>
                            <RowDefinition Height="0.17*"/>
                        </Grid.RowDefinitions>
                        <Viewbox Height="370" Stretch="None" Width="350" Grid.Row="0">
